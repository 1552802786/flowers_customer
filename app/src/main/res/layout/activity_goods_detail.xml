<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha_45"
                    android:text="添加商品图片"
                    android:layout_margin="10dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/photo_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/genre_first_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类别"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/genre_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_1"
                        android:text="玫瑰"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:id="@+id/genre_sub_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品类"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/genre_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_2"
                        android:text="情爱玫瑰"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:id="@+id/grade_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_3"
                        android:text="A"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:id="@+id/color_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_4"
                        android:text="红色"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:id="@+id/spec_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_5"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/spec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_5"
                        android:text="规格"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:id="@+id/unit_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_6"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_6"
                        android:text="束"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:id="@+id/sales_value_con"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可售量"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"/>

                    <ImageView
                        android:id="@+id/ic_right_7"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_chevron" />

                    <TextView
                        android:id="@+id/sales_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ic_right_7"
                        android:text="20"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/line_color"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>