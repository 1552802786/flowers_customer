<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty"
        android:layout_margin="5dp"
        android:text="下单时间：2017/09/20 19:20" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/empty"
        android:layout_margin="5dp"
        android:text="待付款"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/img_con"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/order_status"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_goods_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_con"
        android:layout_margin="5dp"
        android:text="" />

    <!-- 共<font color='#52A436'>6</font>类商品 -->

    <TextView
        android:id="@+id/order_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_con"
        android:layout_margin="5dp"
        android:text="¥200（不包含运费）" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/order_fee"
        android:layout_margin="5dp"
        android:background="@drawable/corners_color_accent_small"
        android:text="取消订单"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/order_fee"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/right_btn"
        android:background="@drawable/corners_color_green"
        android:text="去支付"
        android:textColor="@color/white" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@+id/left_btn" />
</RelativeLayout>