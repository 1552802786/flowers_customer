<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/pick_consignee"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>

                <ImageView
                    android:id="@+id/ic_right_5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron" />

                <TextView
                    android:id="@+id/person_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ic_right_5"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/line_color"/>
            <RelativeLayout
                android:id="@+id/pick_consignee_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货电话"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>

                <ImageView
                    android:id="@+id/ic_right_6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron" />

                <TextView
                    android:id="@+id/person_consignee_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ic_right_6"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/line_color"/>
            <RelativeLayout
                android:id="@+id/pick_consignee_method"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认地址"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>

                <ImageView
                    android:id="@+id/ic_right_8"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron" />

                <TextView
                    android:id="@+id/person_consignee_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ic_right_8"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/line_color"/>
            <RelativeLayout
                android:id="@+id/pick_consignee_place_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/p_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址(省市区)"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>

                <ImageView
                    android:id="@+id/ic_right_7"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron" />

                <TextView
                    android:id="@+id/person_consignee_place_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ic_right_7"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:layout_toRightOf="@+id/p_1"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/line_color"/>

            <RelativeLayout
                android:id="@+id/pick_consignee_place_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/p_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址(详细地址)"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"/>

                <ImageView
                    android:id="@+id/ic_right_9"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron" />

                <TextView
                    android:id="@+id/person_consignee_place_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/p_2"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/ic_right_9"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/line_color"/>
        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="创建/修改收货信息"
            android:textColor="@color/white"
            android:background="@drawable/corners_color_accent_small"/>

    </RelativeLayout>



</LinearLayout>