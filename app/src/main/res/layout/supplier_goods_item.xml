<?xml version="1.0" encoding="utf-8"?>
<com.yuangee.flower.customer.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="100dp"
            android:layout_height="110dp" />

        <LinearLayout
            android:id="@+id/param_con"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/goods_img"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/update_icon"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/add_goods_star"
                    android:layout_width="22dp"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="品尚玫瑰"
                    android:gravity="top"
                    android:textColor="#000000" />
            </LinearLayout>


            <TextView
                android:textSize="12sp"
                android:id="@+id/goods_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="等级:A" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/goods_color"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="颜色:红" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/goods_spec"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="规格:800cm" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/goods_left"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="可售量:800" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/right_con"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_alignParentRight="true">

        </FrameLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="0.1dp"
            android:layout_height="110dp"
            android:layout_toLeftOf="@+id/right_con"
            android:background="@color/line_color"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_toLeftOf="@+id/line1">

            <TextView
                android:id="@+id/goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="¥200/束"
                android:textColor="@color/green" />

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/delete_con"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/green"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</com.yuangee.flower.customer.widget.SwipeMenuLayout>